<section class="content-header">
    <%= link_to "Adicionar uma Ideia", new_ideium_path, class: "btn btn-primary btn-lg "%>
        <div class="box-produtos">
            <div class="box-header">
                <h3 class="box-title">Idéias</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</section>
<div class="container">
    <!-- /.box-header -->
    <div class="box box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
            </tr>

            <% @ideia.each do |ideia| %>
                <%if current_user == ideia.user %>
                    <tr>
                        <td>
                            <%= ideia.id %>
                        </td>
                        <td>
                            <%= ideia.descricao %>
                        </td>
                        <td>
                            <%= link_to 'Visualizar', suaideia_path(ideia) %>
                        </td>
                        <td>
                            <%= link_to 'Alterar', edit_ideium_path(ideia.id)%>
                        </td>
                        <td>
                            <%= link_to 'Excluir', ideia, data: { confirm: 'Are you sure?' } %>
                        </td>
                    </tr>
                    <%end%>
                        <%end%>
        </table>

        <!-- /.box-body -->
    </div>
</div>