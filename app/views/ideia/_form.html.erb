<%= form_for(@ideium, html: { class: 'form-horizontal' }) do |f| %>
    <div class="row">
        <% if @ideium.errors.any? %>
            <div id="error_explanation">
                <h2>
                    <%= pluralize(@ideium.errors.count, "error") %> prohibited this ideium from being saved:</h2>

                <ul>
                    <% @ideium.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                        <% end %>
                </ul>
            </div>
            <% end %>


                <section class="content">


                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <h2 class="section-heading">
                                Descrição Principal <br>
                                <%= f.text_field :descricao %>
                            </h2>
                            <h3 class="section-subheading text-muted">
                                Descrição Detalhada<br>
                                <%= f.text_area :descricaocompleta %>
                            </h3>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
                    </span>
                            <h4 class="service-heading">
                                <%= f.text_field :tituloum %>
                            </h4>
                            <p class="text-muted">
                                <%= f.text_area :descricaoum %>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
                    </span>
                            <h4 class="service-heading">
                                <%= f.text_field :titulodois %>
                            </h4>
                            <p class="text-muted">
                                <%= f.text_area :descricaodois %>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                            <h4 class="service-heading">
                                <%= f.text_field :titulotres %>
                            </h4>
                            <p class="text-muted">
                                <%= f.text_area :descricaotres %>
                            </p>
                        </div>
                        <div class="control-group controls">
                            <%= f.submit %>
                        </div>
                    </div>
                </section>
                <% end %>
                    <section class="success " id="about ">

                        <div class="row ">
                            <div class="col-lg-12 text-center ">
                                <h2>Um Pouco de
                                    <%= @ideium.user.name %>
                                </h2>
                                <hr class="star-light ">
                                <div class="alterarideia">
                                    <a class="btn btn-app" href="<%= edit_perfil_path(@ideium.user.perfil.id) %>">
                                        <i class="fa fa-edit"></i> Alterar
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-lg-4 col-lg-offset-2 ">
                                <p>
                                    Profissão:
                                    <%= @ideium.user.perfil.profissao %><br> Formação:
                                        <%= @ideium.user.perfil.formacao %><br> Conhecimentos:
                                            <%= @ideium.user.perfil.conhecimentos %>

                                </p>
                            </div>
                            <div class="col-lg-4 ">
                                <p>
                                    Habilidades:
                                    <%= @ideium.user.perfil.habilidades %> <br> Objetivos:
                                        <%= @ideium.user.perfil.objetivo %> <br>


                                </p>

                            </div>
                            <div class="col-lg-8 col-lg-offset-2 text-center ">
                                <a href="# " class="btn btn-lg btn-outline ">
                                    <i class="fa fa-download "></i> Download Theme
                                </a>
                            </div>
                        </div>

                    </section>