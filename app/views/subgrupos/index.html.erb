<section class="content-header">
    <%= link_to "Adicionar Subgrupo", new_subgrupo_path, class: "btn btn-primary btn-lg "%>
        <div class="box-header">
            <h3 class="box-title">Subgrupos</h3>

            <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
</section>
<section class="content">

    <!-- /.box-header -->
    <div class="box box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
            </tr>
            <% todos = Subgrupo.all %>
                <% todos.each do |subgrupo| %>
                    <%if current_user == subgrupo.user %>
                        <tr>
                            <td>
                                <%= subgrupo.id %>
                            </td>
                            <td>
                                <%= subgrupo.nome %>
                            </td>
                            <td>
                                <%= link_to 'Visualizar'%>
                            </td>
                            <td>
                                <%= link_to 'Alterar', edit_subgrupo_path(subgrupo.id)%>
                            </td>
                            <td>
                                <%= link_to 'Excluir', subgrupo, data: { confirm: 'Are you sure?' } %>
                            </td>


                        </tr>
                        <%end%>
                            <%end%>
        </table>

        <!-- /.box-body -->
    </div>
</section>