<section class="content-header">
    <%= link_to "Adicionar Tipos Projetos", new_tipo_projeto_path, class: "btn btn-primary btn-lg "%>
        <div class="box-produtos">
            <div class="box-header">
                <h3 class="box-title">Tipo Projetos</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<section class="content">
    <!-- /.box-header -->
    <div class="box box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Tipo</th>
            </tr>
            <% todos = TipoProjeto.all %>
                <% todos.each do |tipo| %>
                    <%if current_user == tipo.user %>
                        <tr>
                            <td>
                                <%= tipo.id %>
                            </td>
                            <td>
                                <%= tipo.tipo %>
                            </td>
                            <td>
                                <%= link_to 'Visualizar'%>
                            </td>
                            <td>
                                <%= link_to 'Alterar',  edit_tipo_projeto_path(tipo.id)%>
                            </td>
                            <td>
                                <%= link_to 'Excluir', tipo, data: { confirm: 'Are you sure?' } %>
                            </td>


                        </tr>
                        <%end%>
                            <%end%>
        </table>

        <!-- /.box-body -->
    </div>
</section>