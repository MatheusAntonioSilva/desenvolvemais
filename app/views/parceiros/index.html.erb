<section class="content-header">
    <%= link_to "Adicionar Parceiros", new_parceiro_path, class: "btn btn-primary btn-lg "%>
        <div class="box-produtos">
            <div class="box-header">
                <h3 class="box-title">Parceiros</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
</section>

<!-- /.box-header -->
<section class="content">
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">

            <tr>
                <th>Nome</th>
                <th>Cpf cnpj</th>
                <th>Telefone</th>
                <th>Endereco</th>
                <th>Numero</th>
                <th>Cidade</th>

                <th colspan="3"></th>
            </tr>
            </thead>



            <% @parceiro.each do |parceiro| %>
                <%if current_user == parceiro.user %>
                    <tr>
                        <td>
                            <%= parceiro.nome %>
                        </td>
                        <td>
                            <%= parceiro.cpf_cnpj %>
                        </td>

                        <td>
                            <%= parceiro.telefone %>
                        </td>

                        <td>
                            <%= parceiro.endereco %>
                        </td>
                        <td>
                            <%= parceiro.numero %>
                        </td>

                        <td>
                            <%= parceiro.cidade %>
                        </td>

                        <td>
                            <%= link_to 'Alterar', edit_parceiro_path(parceiro) %>
                        </td>
                        <td>
                            <%= link_to 'Excluir', parceiro, data: { confirm: 'Are you sure?' } %>
                        </td>
                    </tr>


                    </tr>
                    <%end%>
                        <%end%>
        </table>

        <!-- /.box-body -->
    </div>
</section>