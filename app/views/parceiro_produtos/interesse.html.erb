<!-- Page Heading -->
<section class="content">

    <%= form_tag(interesse_new_path, :method => :get) do %>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header-port">Do que Seria seu Problema?</h1>
                <div class="col-lg-6">
                    <div class="input-group">
                        <%= text_field_tag 'search', nil, placeholder: 'Pesquise por produto...', class: 'form-control' %>

                            <div class="pesquisaesquerda">
                                <div class="check-box pesquisa">
                                    <h3><label>Areas de Soluções</label>
                                    </h3>
                                    <%= check_box_tag :id_gestao,  class: 'checkpesquisa' %>
                                        <label>Gestão</label>
                                </div>
                                <div class="check-box pesquisa">
                                    <%= check_box_tag (:id_venda), class: 'checkpesquisa' %>
                                        <label>Vendas</label>
                                </div>
                                <div class="check-box pesquisa">
                                    <%= check_box_tag (:id_compra), class: 'checkpesquisa' %>
                                        <label>Compras</label>
                                </div>
                                <div class="check-box pesquisa">
                                    <%= check_box_tag (:id_estoque), class: 'checkpesquisa' %>
                                        <label>Estoque</label>
                                </div>
                                <div class="check-box pesquisa">
                                    <%= check_box_tag (:id_ecommerce), class: 'checkpesquisa' %>
                                        <label>E-commerce</label>
                                </div>
                                <div class="check-box pesquisa">
                                    <%= check_box_tag (:id_jogo), class: 'checkpesquisa' %>
                                        <label>Jogos</label>
                                </div>
                                <div class="check-box pesquisa">
                                    <%= check_box_tag (:id_infra), class: 'checkpesquisa' %>
                                        <label>Infraestrutura</label>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

            <div class="botaopesquisa">
                <span class="input-group-btn">
                         
                      <button class="btn btn-success btn-lg" type="submit" value="Go!" name="commit">Pesquisar... <i class="fa fa-search"></i></button>
                    </span>
            </div>
            <!-- /input-group -->


        </div>

        <!-- /.row -->

        <!-- Project One -->
        <% @produtos.each do |soluco| %>
            <div class="row">
                <div class="col-md-7">
                    <a href="#">
                        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                    </a>
                </div>
                <div class="col-md-5">

                    <h3>
                        <%= soluco.descricao%>
                    </h3>
                    <h4>Subheading</h4>
                    <p class="lead">
                        <hr class="section-heading-spacer">
                        <%= soluco.descricaocompleta%>
                            </hr>
                    </p>

                    <a class="btn btn-primary" <%=link_to 'Visualizar Produto', interesse_path(soluco) %></a>
                </div>
            </div>
            <%end%>

                <!-- Pagination -->
                <hr>
                <div class="row text-center">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <li>
                                <%= will_paginate @produtos, class: 'paginacao' %>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.row -->


                <!-- /.row -->
                <%end%>
                    </hr>

</section>



<!-- /.container -->