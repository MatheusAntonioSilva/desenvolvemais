<section class="content-header">
    <%= link_to "Adicionar Interesses", new_parceiro_produto_path, class: "btn btn-primary btn-lg "%>
        <div class="box-produtos">
            <div class="box-header">
                <h3 class="box-title">Interesses</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
</section>
<!-- /.box-header -->
<section class="content">
    <div class="container">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>

                </tr>


                <% @parceiro_produto.each do |interesse| %>
                    <% if interesse.user_id == current_user.id %>
                        <tr>
                            <td>
                                <%= interesse.id %>
                            </td>
                            <td>
                                <%= interesse.produto.descricao %>
                            </td>


                            <td>
                                <%= link_to 'Visualizar' %>
                            </td>
                            <td>

                            </td>
                            <td>

                            </td>


                        </tr>
                        <%end%>
                            <%end%>
            </table>

            <!-- /.box-body -->
        </div>
        <div class="buton-palavrachave">
            <!-- <%= link_to "Vincular Palavras Chaves",  new_produto_chafe_path, class: "btn btn-warning "%> -->
        </div>
    </div>
</section>