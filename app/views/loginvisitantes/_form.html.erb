<%= form_for(User.new, url:  visitantes_login_path, html: { class: 'form-horizontal' }) do |f| %>

    <div class="row">
        <div class="control-group col-md-4 col-md-offset-4">
            <h3>Entre na sua conta</h3>
        </div>
        <div class="control-group col-md-4 col-md-offset-4">

            <%= f.label :email, class: 'control-label div-email' %>
                <div class="controls ">
                    <%= f.text_field :email %>
                </div>
        </div>
        <div class="control-group col-md-4 col-md-offset-4">
            <%= f.label :password, class: 'control-label' %>
                <div class="controls ">
                    <%= f.password_field :password %>
                </div>
        </div>

        <div class="control-group col-md-4 col-md-offset-4">
            <%= f.submit "Login", class: 'btn btn-primary' %>
        </div>
    </div>


    <% end %>