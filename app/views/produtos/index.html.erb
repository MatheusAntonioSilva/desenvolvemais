<section class="content-header">
    <%= link_to "Adicionar Produtos", new_produto_path, class: "btn btn-primary btn-lg "%>
        <div class="box-produtos">
            <div class="box-header">
                <h3 class="box-title">Produtos</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<section class="content">

    <!-- /.box-header -->
    <div class="box box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Código de Barra</th>
                <th>Código de Fabrica</th>
                <th>Unidade</th>
            </tr>

            <% todos = Produto.all  %>
                <% todos.each do |produto| %>

                    <%if current_user == produto.user %>
                        <tr>
                            <td>
                                <%= produto.id %>
                            </td>
                            <td>
                                <%= produto.descricao %>
                            </td>
                            <td>
                                <%= produto.codbarra %>
                            </td>
                            <td>
                                <%= produto.codfabrica %>
                            </td>
                            <td>
                                <%= produto.unidade %>
                            </td>

                            <!--
                            <td>
                                <%= link_to 'Palavras Chaves',  edit_produto_chafe_path(produto.id)%>
                            </td>
                            -->
                            <td>
                                <%= link_to 'Visualizar' %>
                            </td>
                            <td>
                                <%= link_to 'Alterar', edit_produto_path(produto.id)%>
                            </td>
                            <td>
                                <%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>


                        </tr>

                        <%end%>
                            <%end%>
        </table>

        <!-- /.box-body -->
    </div>

    <div class="buton-palavrachave">
        <!-- <%= link_to "Vincular Palavras Chaves",  new_produto_chafe_path, class: "btn btn-warning "%> -->
    </div>
</section>