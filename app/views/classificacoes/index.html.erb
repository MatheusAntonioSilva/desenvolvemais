<section class="content-header">
    <%= link_to "Adicionar Classificação", new_classificaco_path, class: "btn btn-primary btn-lg "%>
        <div class="box-produtos">
            <div class="box-header">
                <h3 class="box-title">Classificações</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<div class="container">

    <!-- /.box-header -->
    <div class="box box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
            </tr>
            <% todos = Classificacoe.all %>
                <% @classificacoe.each do |classificacao| %>
                    <%if current_user == classificacao.user %>
                        <tr>
                            <td>
                                <%= classificacao.id %>
                            </td>
                            <td>
                                <%= classificacao.descricao %>
                            </td>
                            <td>
                                <%= link_to 'Visualizar'%>
                            </td>
                            <td>
                                <%= link_to 'Alterar', edit_classificaco_path(classificacao.id)%>
                            </td>
                            <td>
                                <%= link_to 'Excluir', classificacao, data: { confirm: 'Are you sure?' } %>
                            </td>


                        </tr>
                        <%end%>
                            <%end%>
        </table>

        <!-- /.box-body -->
    </div>
</div>